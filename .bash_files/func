color() {
    printf '\033[0;31m%s\033[0m\n' "$1"
}

function show(){
  echo " "
  echo "BASHRC FUNCTIONS:"
  echo " "
  color " insapp    -> Installing the applications from ~/.bash/.install/app.list"
  color " dnf_clean -> clean all dnf"
  echo " "
}


#install all application from app.list
function insapp(){
	echo "$(tput setaf 1)Installing the packages from app.list file..$(tput sgr0)" && cat $HOME/.bash/.install/app.list | xargs sudo yum -y install
}

#dnf startup
function dnf_clean(){
 su -c 'dnf clean all'
 su -c 'dnf repolist'
 su -c 'dnf upgrade'
}




